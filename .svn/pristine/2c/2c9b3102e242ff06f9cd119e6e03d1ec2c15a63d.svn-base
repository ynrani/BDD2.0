.sample#bringhurst {
	background: #fcfaf2;
	padding: 150px 0 150px 0;
}

.sample#bringhurst .text {
	margin: 0 auto;
	padding: 0 100px;
}

.sample#bringhurst h1 {
	color: #333;
	font: 400 20px/30px "vollkorn";
	font-style: italic;
	margin: 0 0 10px 0;
	text-indent: -6px;
}

.sample#bringhurst p {
	color: #c90707;
	font: 400 12px/18px "vollkorn";
	letter-spacing: 1px;
	text-transform: uppercase;
	text-indent: -13px;
}

