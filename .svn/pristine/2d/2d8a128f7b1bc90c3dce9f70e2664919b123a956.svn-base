		// String txtfile = txtopr.ReadingTxtFile(url.getPath());
		// String FILE_PATH = txtfile + request.getParameter("Folder1") +"//" +
		// request.getParameter("SubFolder1") + "//"
		// +request.getParameter("FileName1");

		// val = txtopr.ReadingTxtFile(".\\resources\\Configuration.txt");

		// STOP: commented by vikrant

		// ReadTXTFile readTXTFile = new ReadTXTFile();

		String resourcesPath = cmrt.m_featurePath;
		System.out.println("Resources Path: " + resourcesPath);

